/* components/modal/modal.wxss */
.modal-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-main {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  max-width: 90%;
  max-height: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.modal-main.modal-animation-scale {
  animation: scaleIn 0.3s ease;
}

.modal-main.modal-animation-slide {
  animation: slideIn 0.3s ease;
}

@keyframes scaleIn {
  from {
    transform: translate(-50%, -50%) scale(0.8);
    opacity: 0;
  }
  to {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
}

@keyframes slideIn {
  from {
    transform: translate(-50%, -60%);
    opacity: 0;
  }
  to {
    transform: translate(-50%, -50%);
    opacity: 1;
  }
}

.modal-header {
  position: relative;
  padding: 32rpx 32rpx 0;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.modal-close {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background-color 0.2s ease;
}

.modal-close:active {
  background-color: #f0f0f0;
}

.close-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

.modal-body {
  padding: 32rpx;
  text-align: center;
}

.modal-icon {
  margin-bottom: 24rpx;
}

.icon-image {
  width: 96rpx;
  height: 96rpx;
}

.modal-content {
  margin-bottom: 16rpx;
}

.content-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  word-break: break-all;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  transition: background-color 0.2s ease;
  user-select: none;
}

.modal-btn:active {
  background-color: #f8f9fa;
}

.modal-btn--cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn--confirm {
  color: #ff6b9d;
  font-weight: 600;
}

.modal-btn--disabled {
  color: #ccc;
  pointer-events: none;
}

/* 不同类型的图标样式 */
.modal-icon--success .icon-image {
  filter: hue-rotate(120deg);
}

.modal-icon--warning .icon-image {
  filter: hue-rotate(45deg);
}

.modal-icon--error .icon-image {
  filter: hue-rotate(0deg);
}

.modal-icon--info .icon-image {
  filter: hue-rotate(200deg);
}

/* 全屏模式 */
.modal-main--fullscreen {
  width: 100%;
  height: 100%;
  max-width: 100%;
  max-height: 100%;
  top: 0;
  left: 0;
  transform: none;
  border-radius: 0;
}

/* 底部弹出模式 */
.modal-main--bottom {
  top: auto;
  bottom: 0;
  left: 0;
  transform: none;
  width: 100%;
  border-radius: 24rpx 24rpx 0 0;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}