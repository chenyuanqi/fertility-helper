<!--components/modal/modal.wxml-->
<view class="modal-container" wx:if="{{visible}}">
  <!-- 遮罩层 -->
  <view class="modal-mask" bindtap="onMaskTap"></view>
  
  <!-- 弹窗主体 -->
  <view class="modal-main {{animationClass}}">
    <!-- 头部 -->
    <view class="modal-header" wx:if="{{title || showClose}}">
      <view class="modal-title">{{title}}</view>
      <view class="modal-close" wx:if="{{showClose}}" bindtap="onCloseTap">
        <image class="close-icon" src="/assets/icons/close.png" mode="aspectFit"></image>
      </view>
    </view>
    
    <!-- 内容区域 -->
    <view class="modal-body">
      <!-- 图标 -->
      <view class="modal-icon" wx:if="{{icon}}">
        <image class="icon-image" src="{{iconSrc}}" mode="aspectFit"></image>
      </view>
      
      <!-- 文本内容 -->
      <view class="modal-content" wx:if="{{content}}">
        <text class="content-text">{{content}}</text>
      </view>
      
      <!-- 自定义内容插槽 -->
      <slot name="content"></slot>
    </view>
    
    <!-- 底部按钮 -->
    <view class="modal-footer" wx:if="{{showFooter}}">
      <!-- 取消按钮 -->
      <view 
        wx:if="{{showCancel}}"
        class="modal-btn modal-btn--cancel"
        bindtap="onCancelTap"
      >
        {{cancelText}}
      </view>
      
      <!-- 确认按钮 -->
      <view 
        wx:if="{{showConfirm}}"
        class="modal-btn modal-btn--confirm {{confirmDisabled ? 'modal-btn--disabled' : ''}}"
        bindtap="onConfirmTap"
      >
        {{confirmText}}
      </view>
    </view>
    
    <!-- 自定义底部插槽 -->
    <slot name="footer" wx:if="{{!showFooter}}"></slot>
  </view>
</view>