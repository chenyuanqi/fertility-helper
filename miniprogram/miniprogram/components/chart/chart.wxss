/* components/chart/chart.wxss */
.chart-container {
  position: relative;
  background: linear-gradient(to bottom, #f8f9fa 0%, #f8f9fa 100%);
  border: 2rpx solid #e6e6e6;
  border-radius: 16rpx;
  overflow: hidden;
}

.chart-empty {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

.chart-content {
  position: relative;
  height: 100%;
}

/* Y轴样式 */
.y-axis {
  position: absolute;
  left: 0;
  top: 0;
  width: 80rpx;
  height: calc(100% - 60rpx);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 40rpx 0;
  background: white;
  border-right: 2rpx solid #e6e6e6;
}

.y-label {
  font-size: 20rpx;
  color: #8c8c8c;
  text-align: center;
  line-height: 1;
}

/* X轴标签 */
.x-axis {
  position: absolute;
  bottom: 0;
  left: 80rpx;
  right: 0;
  height: 60rpx;
  background: white;
  border-top: 2rpx solid #e6e6e6;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.x-label {
  position: absolute;
  font-size: 20rpx;
  color: #8c8c8c;
  white-space: nowrap;
  transform: translateX(-50%);
}

/* 图表内容区域 */
.chart-content-area {
  position: absolute;
  left: 80rpx;
  top: 0;
  right: 0;
  bottom: 60rpx;
  overflow: hidden;
}

/* 经量背景 */
.menstrual-backgrounds {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.menstrual-bg {
  position: absolute;
  top: 0;
  bottom: 0;
  opacity: 0.3;
}

.menstrual-level-1 {
  background: #ffe6e6;
}

.menstrual-level-2 {
  background: #ffcccc;
}

.menstrual-level-3 {
  background: #ff9999;
}

/* Cover-line 覆盖线样式 */
.cover-line {
  position: absolute;
  left: 0;
  right: 0;
  height: 2rpx;
  background: #666666;
  border-top: 4rpx dashed #666666;
  z-index: 8;
}

/* 体温层 */
.temperature-layer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.temperature-point {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  background: #4a90e2;
  border: 4rpx solid white;
  border-radius: 50%;
  transform: translate(-50%, 50%);
  cursor: pointer;
  z-index: 10;
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

.temperature-point.high-temp {
  background: #2171b5;
}

.temperature-point.above-coverline {
  border-color: #4ecdc4;
  border-width: 6rpx;
}

.temperature-point:active {
  transform: translate(-50%, 50%) scale(1.3);
}

/* 同房标记 */
.intercourse-markers {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  height: 40rpx;
}

.intercourse-marker {
  position: absolute;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 5;
}

.marker-icon {
  font-size: 32rpx;
  line-height: 1;
}

.marker-count {
  font-size: 18rpx;
  color: #666666;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  width: 24rpx;
  height: 24rpx;
  text-align: center;
  line-height: 24rpx;
  margin-top: 4rpx;
  border: 1rpx solid #e0e0e0;
}

/* 排卵日标记样式 */
.ovulation-markers {
  position: absolute;
  top: 20rpx;
  left: 0;
  right: 0;
  height: 40rpx;
}

.ovulation-marker {
  position: absolute;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  background: #faad14;
  border-radius: 50%;
  z-index: 9;
}

.ovulation-icon {
  font-size: 20rpx;
  color: white;
  font-weight: bold;
}

/* 动画效果 */
.temperature-point {
  transition: transform 0.2s ease;
}

.chart-content {
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .y-axis {
    width: 60rpx;
  }
  
  .y-label {
    font-size: 18rpx;
  }
  
  .x-axis {
    left: 60rpx;
  }
  
  .chart-content-area {
    left: 60rpx;
  }
  
  .temperature-point {
    width: 12rpx;
    height: 12rpx;
  }
}

/* 额外的体温点样式 */
.temperature-point.alternative {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ffb3ba;
  border: 2rpx solid #ffffff;
  transform: translate(-50%, -50%);
  z-index: 3;
}

.temperature-point.alternative.high-temp {
  background: #ff6b6b;
}
