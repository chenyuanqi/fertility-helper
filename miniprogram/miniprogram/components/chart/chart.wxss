/* components/chart/chart.wxss */
.chart-container {
  position: relative;
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx solid #f0f0f0;
}

.chart-empty {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

.chart-content {
  display: flex;
  height: 100%;
  position: relative;
}

/* Y轴样式 */
.y-axis {
  width: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 40rpx 0 60rpx 0;
  background: #fafafa;
  border-right: 1rpx solid #e0e0e0;
}

.y-label {
  font-size: 20rpx;
  color: #666666;
  text-align: center;
  line-height: 1;
}

/* 图表区域 */
.chart-area {
  flex: 1;
  position: relative;
  margin: 40rpx 20rpx 60rpx 20rpx;
}

/* 网格线 */
.grid-lines {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.grid-line.horizontal {
  position: absolute;
  left: 0;
  right: 0;
  height: 1rpx;
  background: #e8e8e8;
}

/* 经量背景 */
.menstrual-backgrounds {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.menstrual-bg {
  position: absolute;
  top: 0;
  bottom: 0;
  opacity: 0.3;
}

.menstrual-level-1 {
  background: rgba(255, 182, 193, 0.4);
}

.menstrual-level-2 {
  background: rgba(255, 160, 160, 0.5);
}

.menstrual-level-3 {
  background: rgba(255, 102, 102, 0.6);
}

/* 体温层 */
.temperature-layer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.temperature-point {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  background: #ff6b9d;
  border: 3rpx solid #ffffff;
  border-radius: 50%;
  transform: translate(-50%, 50%);
  cursor: pointer;
  z-index: 10;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.temperature-point.high-temp {
  background: #ff3333;
}

.temperature-point:active {
  transform: translate(-50%, 50%) scale(1.2);
}

/* 同房标记 */
.intercourse-markers {
  position: absolute;
  bottom: -40rpx;
  left: 0;
  right: 0;
  height: 40rpx;
}

.intercourse-marker {
  position: absolute;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 5;
}

.marker-icon {
  font-size: 24rpx;
  line-height: 1;
}

.marker-count {
  font-size: 18rpx;
  color: #666666;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  width: 20rpx;
  height: 20rpx;
  text-align: center;
  line-height: 20rpx;
  margin-top: 2rpx;
  border: 1rpx solid #e0e0e0;
}

/* X轴标签 */
.x-axis {
  position: absolute;
  bottom: 0;
  left: 100rpx;
  right: 20rpx;
  height: 60rpx;
  background: #fafafa;
  border-top: 1rpx solid #e0e0e0;
}

.x-label {
  position: absolute;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
  color: #666666;
  white-space: nowrap;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .y-axis {
    width: 60rpx;
    padding: 30rpx 0 50rpx 0;
  }
  
  .y-label {
    font-size: 18rpx;
  }
  
  .chart-area {
    margin: 30rpx 15rpx 50rpx 15rpx;
  }
  
  .temperature-point {
    width: 12rpx;
    height: 12rpx;
    border: 2rpx solid #ffffff;
  }
  
  .marker-icon {
    font-size: 20rpx;
  }
  
  .x-label {
    font-size: 18rpx;
  }
}

/* 动画效果 */
.temperature-point {
  transition: transform 0.2s ease;
}

.chart-content {
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}