/* components/loading/loading.wxss */
.loading-container {
  position: relative;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.loading-container--visible {
  opacity: 1;
  visibility: visible;
}

/* 全屏加载 */
.loading-container--fullscreen {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
}

.loading-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(2px);
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-content--fullscreen {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.loading-content--inline {
  padding: 32rpx;
}

.loading-content--overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 32rpx;
  border-radius: 12rpx;
  min-width: 200rpx;
}

/* 加载动画容器 */
.loading-spinner {
  margin-bottom: 16rpx;
}

/* 圆形加载器 */
.spinner-circle {
  width: 64rpx;
  height: 64rpx;
  position: relative;
}

.circle-path {
  width: 100%;
  height: 100%;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #ff6b9d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 点状加载器 */
.spinner-dots {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background-color: #ff6b9d;
  border-radius: 50%;
  animation: dotPulse 1.4s ease-in-out infinite both;
}

.dot-1 { animation-delay: -0.32s; }
.dot-2 { animation-delay: -0.16s; }
.dot-3 { animation-delay: 0s; }

@keyframes dotPulse {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 波浪加载器 */
.spinner-wave {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.wave-bar {
  width: 6rpx;
  height: 40rpx;
  background-color: #ff6b9d;
  border-radius: 3rpx;
  animation: waveStretch 1.2s ease-in-out infinite;
}

.wave-bar-1 { animation-delay: -1.2s; }
.wave-bar-2 { animation-delay: -1.1s; }
.wave-bar-3 { animation-delay: -1.0s; }
.wave-bar-4 { animation-delay: -0.9s; }
.wave-bar-5 { animation-delay: -0.8s; }

@keyframes waveStretch {
  0%, 40%, 100% {
    transform: scaleY(0.4);
  }
  20% {
    transform: scaleY(1);
  }
}

/* 脉冲加载器 */
.spinner-pulse {
  position: relative;
  width: 64rpx;
  height: 64rpx;
}

.pulse-ring {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 2rpx solid #ff6b9d;
  border-radius: 50%;
  animation: pulseRing 2s ease-in-out infinite;
}

.pulse-ring-1 { animation-delay: 0s; }
.pulse-ring-2 { animation-delay: -0.7s; }
.pulse-ring-3 { animation-delay: -1.4s; }

@keyframes pulseRing {
  0% {
    transform: scale(0);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 0;
  }
}

/* 加载文本 */
.loading-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 1.4;
}

.loading-content--overlay .loading-text {
  color: white;
}

/* 小尺寸 */
.loading-spinner--small .spinner-circle {
  width: 32rpx;
  height: 32rpx;
}

.loading-spinner--small .circle-path {
  border-width: 2rpx;
}

.loading-spinner--small .dot {
  width: 8rpx;
  height: 8rpx;
}

.loading-spinner--small .wave-bar {
  width: 3rpx;
  height: 20rpx;
}

.loading-spinner--small .spinner-pulse {
  width: 32rpx;
  height: 32rpx;
}

/* 大尺寸 */
.loading-spinner--large .spinner-circle {
  width: 96rpx;
  height: 96rpx;
}

.loading-spinner--large .circle-path {
  border-width: 6rpx;
}

.loading-spinner--large .dot {
  width: 24rpx;
  height: 24rpx;
}

.loading-spinner--large .wave-bar {
  width: 8rpx;
  height: 60rpx;
}

.loading-spinner--large .spinner-pulse {
  width: 96rpx;
  height: 96rpx;
}