/* components/simple-chart/simple-chart.wxss */

.simple-chart-container {
  width: 100%;
  height: 100%;
  position: relative;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.simple-chart-canvas {
  width: 100%;
  display: block;
}

/* 图例样式 */
.chart-legend {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-top: 1rpx solid #e6e6e6;
  gap: 40rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
}

.temperature-dot {
  background: #ff6b9d;
}

.menstrual-dot {
  background: #e74c3c;
}

.intercourse-dot {
  background: #4ecdc4;
}

.legend-text {
  font-size: 24rpx;
  color: #666;
}

/* 无数据状态 */
.no-data {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: #999;
}

.no-data-text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.no-data-hint {
  display: block;
  font-size: 22rpx;
  opacity: 0.8;
}
