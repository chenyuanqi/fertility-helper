/* components/simple-chart/simple-chart.wxss */

.simple-chart-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.simple-chart-canvas {
  width: 100%;
  height: 100%;
  display: block;
}

/* 无数据状态 */
.no-data {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: #999;
}

.no-data-text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.no-data-hint {
  display: block;
  font-size: 22rpx;
  opacity: 0.8;
}