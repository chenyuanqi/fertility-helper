<!--components/simple-chart/simple-chart.wxml-->
<view class="simple-chart-container">
  <canvas 
    id="simpleChart"
    type="2d"
    class="simple-chart-canvas"
    style="width: {{width}}rpx; height: {{height - 80}}rpx;">
  </canvas>
  
  <!-- 图例 -->
  <view wx:if="{{chartData && chartData.length > 0}}" class="chart-legend">
    <view class="legend-item">
      <text class="legend-icon">🌡️</text>
      <text class="legend-text">基础体温</text>
    </view>
    <view class="legend-item">
      <text class="legend-icon">🩸</text>
      <text class="legend-text">月经记录</text>
    </view>
    <view class="legend-item">
      <text class="legend-icon">💕</text>
      <text class="legend-text">同房记录</text>
    </view>
  </view>
  
  <!-- 无数据提示 -->
  <view wx:if="{{!chartData || chartData.length === 0}}" class="no-data">
    <text class="no-data-text">暂无数据</text>
    <text class="no-data-hint">请先记录体温、月经等数据</text>
  </view>
</view>
