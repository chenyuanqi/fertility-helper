/* components/avatar/avatar.wxss */

/* 无障碍访问工具类 */
.sr-only {
  position: absolute;
  width: 1rpx;
  height: 1rpx;
  padding: 0;
  margin: -1rpx;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* 跳过链接 */
.skip-link {
  position: absolute;
  top: -80rpx;
  left: 12rpx;
  background: #000;
  color: #fff;
  padding: 16rpx;
  text-decoration: none;
  border-radius: 8rpx;
  z-index: 1000;
  transition: top 0.3s ease;
}

.skip-link:focus {
  top: 12rpx;
}

/* 头像容器 */
.avatar-container {
  position: relative;
  display: inline-block;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f5f5f5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

/* 头像图片 */
.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  display: block;
  transition: transform 0.3s ease;
}

/* 头像占位符 */
.avatar-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fab 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.placeholder-icon {
  font-size: inherit;
  line-height: 1;
}

/* 加载状态 */
.avatar-loading {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  border: 3rpx solid #f0f0f0;
  border-top: 3rpx solid #ff6b9d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 可编辑遮罩层 */
.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  cursor: pointer;
}

.avatar-overlay--visible {
  opacity: 1;
}

.avatar-overlay--hover {
  opacity: 1;
  background-color: rgba(0, 0, 0, 0.6);
}

.overlay-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  text-align: center;
}

.overlay-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  line-height: 1;
}

.overlay-text {
  font-size: 20rpx;
  line-height: 1.2;
  opacity: 0.9;
}

/* 错误状态 */
.avatar-error {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #ffebee;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #f44336;
}

.error-icon {
  font-size: 32rpx;
  line-height: 1;
}

/* 隐藏的canvas */
.hidden-canvas {
  position: fixed;
  top: -9999rpx;
  left: -9999rpx;
  opacity: 0;
  pointer-events: none;
}

/* 不同尺寸的适配 */
.avatar-container[data-size="small"] {
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.avatar-container[data-size="large"] {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

/* 边框样式 */
.avatar-container--bordered {
  border: 4rpx solid #ff6b9d;
  box-sizing: border-box;
}

.avatar-container--bordered .avatar-image,
.avatar-container--bordered .avatar-placeholder,
.avatar-container--bordered .avatar-loading,
.avatar-container--bordered .avatar-error {
  width: calc(100% - 8rpx);
  height: calc(100% - 8rpx);
  margin: 4rpx;
}

/* 悬停效果 */
.avatar-container:hover {
  transform: scale(1.05);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.avatar-container:hover .avatar-image {
  transform: scale(1.1);
}

.avatar-container:hover .avatar-overlay {
  opacity: 1;
}

/* 激活状态 */
.avatar-container:active {
  transform: scale(0.95);
}

/* 焦点状态 - 键盘导航支持 */
.avatar-container:focus {
  outline: 3rpx solid #ff6b9d;
  outline-offset: 2rpx;
  box-shadow: 0 0 0 2rpx #fff, 0 0 0 5rpx #ff6b9d;
}

.avatar-container:focus-visible {
  outline: 3rpx solid #ff6b9d;
  outline-offset: 2rpx;
  box-shadow: 0 0 0 2rpx #fff, 0 0 0 5rpx #ff6b9d;
}

/* 高对比度模式下的焦点状态 */
@media (prefers-contrast: high) {
  .avatar-container:focus,
  .avatar-container:focus-visible {
    outline: 4rpx solid #000;
    outline-offset: 2rpx;
    box-shadow: 0 0 0 2rpx #fff, 0 0 0 6rpx #000;
  }
}

.avatar-container--high-contrast:focus,
.avatar-container--high-contrast:focus-visible {
  outline: 4rpx solid #000;
  outline-offset: 2rpx;
  box-shadow: 0 0 0 2rpx #fff, 0 0 0 6rpx #000;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .overlay-text {
    font-size: 18rpx;
  }
  
  .overlay-icon {
    font-size: 28rpx;
  }
}

/* 高对比度模式支持 */
@media (prefers-contrast: high) {
  .avatar-container {
    border: 3rpx solid #000;
    box-shadow: 0 0 0 1rpx #fff, 0 0 0 4rpx #000;
  }
  
  .avatar-overlay {
    background-color: rgba(0, 0, 0, 0.9);
    border: 2rpx solid #fff;
  }
  
  .avatar-placeholder {
    background: #000;
    color: #fff;
    border: 2rpx solid #fff;
  }
  
  .avatar-loading {
    background-color: #fff;
    border: 2rpx solid #000;
  }
  
  .loading-spinner {
    border-color: #000;
    border-top-color: #fff;
  }
  
  .avatar-error {
    background-color: #fff;
    color: #000;
    border: 2rpx solid #000;
  }
  
  .overlay-text {
    color: #fff;
    text-shadow: 1rpx 1rpx 2rpx #000;
  }
}

/* 高对比度模式类 */
.avatar-container--high-contrast {
  border: 3rpx solid #000;
  box-shadow: 0 0 0 1rpx #fff, 0 0 0 4rpx #000;
}

.avatar-container--high-contrast .avatar-overlay {
  background-color: rgba(0, 0, 0, 0.9);
  border: 2rpx solid #fff;
}

.avatar-container--high-contrast .avatar-placeholder {
  background: #000;
  color: #fff;
  border: 2rpx solid #fff;
}

.avatar-container--high-contrast .avatar-loading {
  background-color: #fff;
  border: 2rpx solid #000;
}

.avatar-container--high-contrast .loading-spinner {
  border-color: #000;
  border-top-color: #fff;
}

.avatar-container--high-contrast .avatar-error {
  background-color: #fff;
  color: #000;
  border: 2rpx solid #000;
}

.avatar-container--high-contrast .overlay-text {
  color: #fff;
  text-shadow: 1rpx 1rpx 2rpx #000;
}

/* 减少动画模式支持 */
@media (prefers-reduced-motion: reduce) {
  .avatar-container,
  .avatar-image,
  .avatar-overlay,
  .loading-spinner {
    transition: none;
    animation: none;
  }
  
  .avatar-container:hover {
    transform: none;
  }
  
  .avatar-container:hover .avatar-image {
    transform: none;
  }
}

/* 暗色主题支持 */
@media (prefers-color-scheme: dark) {
  .avatar-container {
    background-color: #2a2a2a;
    box-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.1);
  }
  
  .avatar-loading {
    background-color: #1a1a1a;
  }
  
  .loading-spinner {
    border-color: #444;
    border-top-color: #ff6b9d;
  }
  
  .avatar-error {
    background-color: #3a1a1a;
  }
}