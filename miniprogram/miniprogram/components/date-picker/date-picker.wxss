/* components/date-picker/date-picker.wxss */
.date-picker-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.date-picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.date-picker-main {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.date-picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.date-picker-btn {
  font-size: 28rpx;
  color: #666;
  padding: 8rpx 16rpx;
}

.date-picker-btn--confirm {
  color: #ff6b9d;
  font-weight: 600;
}

.date-picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.date-picker-content {
  height: 400rpx;
}

.date-picker-view {
  width: 100%;
  height: 100%;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.date-picker-shortcuts {
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.shortcuts-title {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 24rpx;
}

.shortcuts-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.shortcut-item {
  padding: 16rpx 24rpx;
  background-color: #f8f9fa;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.2s ease;
}

.shortcut-item:active {
  background-color: #ff6b9d;
  color: #fff;
}

/* picker-view 样式覆盖 */
.date-picker-view .picker-view-column {
  text-align: center;
}

/* 选中项样式 */
.picker-item {
  position: relative;
}

.picker-item::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200rpx;
  height: 60rpx;
  background-color: rgba(255, 107, 157, 0.1);
  border-radius: 8rpx;
  opacity: 0;
  transition: opacity 0.2s ease;
}

/* 这里需要通过JS动态添加选中状态 */
.picker-item--selected::before {
  opacity: 1;
}

.picker-item--selected {
  color: #ff6b9d;
  font-weight: 600;
}