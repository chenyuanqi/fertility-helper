/* components/slider/slider.wxss */
.slider-container {
  padding: 32rpx 24rpx;
}

.slider-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
}

.slider-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.slider-value {
  font-size: 28rpx;
  color: #ff6b9d;
  font-weight: 600;
}

.slider-main {
  position: relative;
  padding: 24rpx 0 80rpx;
}

.slider-track {
  position: relative;
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  margin: 0 24rpx;
}

.slider-fill {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background: linear-gradient(90deg, #ff9a9e 0%, #ff6b9d 100%);
  border-radius: 4rpx;
  transition: width 0.2s ease;
}

.slider-thumb {
  position: absolute;
  top: -16rpx;
  width: 40rpx;
  height: 40rpx;
  margin-left: -20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: left 0.2s ease;
}

.slider-thumb-inner {
  width: 32rpx;
  height: 32rpx;
  background-color: #ff6b9d;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.3);
  transition: all 0.2s ease;
}

.slider-thumb:active .slider-thumb-inner {
  transform: scale(1.2);
  box-shadow: 0 6rpx 16rpx rgba(255, 107, 157, 0.4);
}

.slider-labels {
  position: absolute;
  top: 48rpx;
  left: 0;
  right: 0;
  height: 60rpx;
}

.slider-label {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  transform: translateX(-50%);
  transition: all 0.2s ease;
}

.slider-label-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #d9d9d9;
  border-radius: 50%;
  margin-bottom: 8rpx;
  transition: all 0.2s ease;
}

.slider-label--active .slider-label-dot {
  background-color: #ff6b9d;
  transform: scale(1.2);
}

.slider-label-text {
  font-size: 20rpx;
  color: #999;
  text-align: center;
  white-space: nowrap;
  transition: color 0.2s ease;
}

.slider-label--active .slider-label-text {
  color: #ff6b9d;
  font-weight: 600;
}

.slider-description {
  margin-top: 32rpx;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #ff6b9d;
}

.slider-description-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 触摸反馈 */
.slider-thumb:active {
  z-index: 10;
}

/* 动画效果 */
@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

.slider-label--active .slider-label-dot {
  animation: pulse 0.3s ease;
}