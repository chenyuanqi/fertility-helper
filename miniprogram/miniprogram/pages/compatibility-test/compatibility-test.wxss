/* 兼容性测试页面样式 */

.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 兼容性信息卡片 */
.compatibility-info {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.compatibility-score {
  text-align: center;
  padding: 20rpx;
  background: linear-gradient(45deg, #4CAF50, #45a049);
  border-radius: 15rpx;
  margin: 20rpx 0;
}

.score-text {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.score-level {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 10rpx;
}

/* 测试控制区域 */
.test-control {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.test-status {
  text-align: center;
  margin-bottom: 30rpx;
}

.status-ready .status-text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.status-running .status-text {
  font-size: 28rpx;
  color: #2196F3;
  animation: pulse 1.5s ease-in-out infinite;
}

.status-completed .status-text {
  font-size: 32rpx;
  color: #4CAF50;
  font-weight: bold;
}

.status-failed .status-text {
  font-size: 32rpx;
  color: #f44336;
  font-weight: bold;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.6; }
  100% { opacity: 1; }
}

.current-test {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-top: 10rpx;
}

/* 进度条 */
.progress-container {
  margin: 30rpx 0;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #45a049);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 按钮样式 */
.btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin: 15rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.btn-primary {
  background: linear-gradient(45deg, #2196F3, #1976D2);
}

.btn-primary:active {
  background: linear-gradient(45deg, #1976D2, #1565C0);
}

.btn-success {
  background: linear-gradient(45deg, #4CAF50, #45a049);
}

.btn-success:active {
  background: linear-gradient(45deg, #45a049, #388e3c);
}

.btn-secondary {
  background: linear-gradient(45deg, #757575, #616161);
}

.btn-secondary:active {
  background: linear-gradient(45deg, #616161, #424242);
}

.btn-disabled {
  background: #cccccc;
  color: #999999;
}

/* 测试结果区域 */
.test-results {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.results-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.results-summary {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.summary-item {
  text-align: center;
}

.summary-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.summary-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
}

.grade-display {
  text-align: center;
  padding: 30rpx;
  margin: 20rpx 0;
  border-radius: 15rpx;
}

.grade-a {
  background: linear-gradient(45deg, #4CAF50, #45a049);
}

.grade-b {
  background: linear-gradient(45deg, #2196F3, #1976D2);
}

.grade-c {
  background: linear-gradient(45deg, #FF9800, #F57C00);
}

.grade-d {
  background: linear-gradient(45deg, #f44336, #d32f2f);
}

.grade-text {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
}

.grade-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 10rpx;
}

/* 分类结果 */
.category-results {
  margin-top: 30rpx;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 15rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.category-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.category-stats {
  font-size: 24rpx;
  color: #666;
}

.category-success {
  border-left: 4rpx solid #4CAF50;
}

.category-warning {
  border-left: 4rpx solid #FF9800;
}

.category-error {
  border-left: 4rpx solid #f44336;
}

/* 操作按钮组 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.action-buttons .btn {
  flex: 1;
  margin: 0;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .container {
    padding: 15rpx;
  }
  
  .title {
    font-size: 42rpx;
  }
  
  .compatibility-info,
  .test-control,
  .test-results {
    padding: 25rpx;
  }
  
  .action-buttons {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .action-buttons .btn {
    flex: none;
  }
}

/* 加载动画 */
.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #2196F3;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 状态图标 */
.status-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 36rpx;
  font-weight: bold;
}

.status-icon-ready {
  background: #e3f2fd;
  color: #2196F3;
}

.status-icon-running {
  background: #fff3e0;
  color: #FF9800;
}

.status-icon-completed {
  background: #e8f5e8;
  color: #4CAF50;
}

.status-icon-failed {
  background: #ffebee;
  color: #f44336;
}