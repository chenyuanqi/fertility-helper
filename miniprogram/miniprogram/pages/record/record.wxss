/* pages/record/record.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ffeef8 0%, #f8f9ff 100%);
  padding: 0;
  padding-bottom: 120rpx;
}

/* 头部样式 */
.header {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  padding: 60rpx 32rpx 40rpx;
  color: white;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: float 8s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  position: relative;
  z-index: 1;
}

.date-picker {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
  margin-top: 16rpx;
}

.date-picker:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

.date-text {
  font-size: 28rpx;
  color: white;
  font-weight: 600;
}

.date-icon {
  font-size: 24rpx;
}

/* 当前选中日期显示 */
.current-date-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 1;
}

.current-date-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 4rpx;
  font-weight: 500;
}

.current-date-value {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  letter-spacing: 1rpx;
}

/* 记录类型切换 - 改为横向Tab */
.record-types {
  display: flex;
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
}

.type-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.type-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  opacity: 0;
  transition: all 0.3s ease;
}

.type-item.active::before {
  opacity: 1;
}

.type-item.active {
  color: white;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.3);
}

.type-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  position: relative;
  z-index: 1;
}

.type-label {
  font-size: 24rpx;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

/* 表单样式 */
.record-form {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
}

.form-title {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: white;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.form-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 体温输入样式 */
.temperature-display {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
}

.temperature-display:active {
  background: #e9ecef;
  border-color: #ff6b9d;
  transform: scale(0.98);
}

.temperature-display .value {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b9d;
  margin-right: 8rpx;
}

.temperature-display .unit {
  font-size: 28rpx;
  color: #6c757d;
}

.temperature-display .placeholder {
  font-size: 32rpx;
  color: #adb5bd;
}

/* 时间选择器样式 */
.picker-display {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 500;
  transition: all 0.3s ease;
}

.picker-display:active {
  background: #e9ecef;
  border-color: #ff6b9d;
}

/* 经期标记样式 */
.period-markers {
  display: flex;
  gap: 32rpx;
  flex-wrap: wrap;
}

.marker-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 8rpx 0;
}

.marker-item text {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* 滑动选择器样式 */
.slider-container {
  margin: 16rpx 0;
}

/* 避孕措施样式 */
.protection-item,
.no-intercourse-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 8rpx 0;
}

.protection-item text,
.no-intercourse-item text {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* 备注输入样式 */
.note-input {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 24rpx;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #2c3e50;
  width: 100%;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.note-input:focus {
  border-color: #ff6b9d;
  background: white;
}

/* 操作按钮样式 */
.form-actions {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.save-btn {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 28rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.3);
  transition: all 0.3s ease;
}

.save-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 157, 0.4);
}

.save-btn[disabled] {
  background: #dee2e6;
  color: #6c757d;
  box-shadow: none;
}

.delete-btn {
  background: #dc3545;
  color: white;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  padding: 24rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(220, 53, 69, 0.3);
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.98);
  background: #c82333;
}

/* 今日记录预览 */
.today-records {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
}

.records-title {
  background: linear-gradient(135deg, #4ecdc4, #44a08d);
  color: white;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}

.record-preview {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-preview:last-child {
  border-bottom: none;
}

.preview-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  width: 48rpx;
  text-align: center;
}

.preview-content {
  flex: 1;
}

.preview-label {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 4rpx;
  font-weight: 500;
}

.preview-value {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
}

.period-tag {
  background: #ff6b9d;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  margin-left: 8rpx;
}

.protection-tag {
  background: #4ecdc4;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  margin-left: 8rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 0;
  }
  
  .form-item {
    padding: 24rpx;
  }
  
  .form-actions {
    padding: 24rpx;
  }
  
  .record-types {
    margin: 16rpx;
  }
  
  .record-form {
    margin: 16rpx;
  }
}

/* 动画效果 */
.record-form {
  animation: slideUp 0.4s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: #6c757d;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #ff6b9d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #6c757d;
}

/* 优化的毛玻璃效果 */
.record-form,
.today-records {
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
}

/* 悬浮效果 */
.record-form:hover,
.today-records:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  transition: all 0.3s ease;
}