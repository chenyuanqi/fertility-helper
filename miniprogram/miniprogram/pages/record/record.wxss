/* pages/record/record.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  padding: 40rpx 32rpx 32rpx;
  color: white;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.date {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 记录类型切换 */
.record-types {
  display: flex;
  background: white;
  margin: 16rpx;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.type-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.type-item.active {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: white;
}

.type-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.type-label {
  font-size: 24rpx;
  font-weight: 500;
}

/* 表单样式 */
.record-form {
  background: white;
  margin: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: white;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

.form-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

/* 体温输入样式 */
.temperature-display {
  background: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.temperature-display:active {
  background: #f0f0f0;
  border-color: #ff6b9d;
}

.temperature-display .value {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b9d;
  margin-right: 8rpx;
}

.temperature-display .unit {
  font-size: 24rpx;
  color: #666;
}

/* 时间选择器样式 */
.picker-display {
  background: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

/* 经期标记样式 */
.period-markers {
  display: flex;
  gap: 32rpx;
}

.marker-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.marker-item text {
  font-size: 28rpx;
  color: #333;
}

/* 避孕措施样式 */
.protection-item,
.no-intercourse-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.protection-item text,
.no-intercourse-item text {
  font-size: 28rpx;
  color: #333;
}

/* 备注输入样式 */
.note-input {
  background: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
}

/* 操作按钮样式 */
.form-actions {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.save-btn {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 24rpx;
  border: none;
}

.save-btn[disabled] {
  background: #ccc;
}

.delete-btn {
  background: #ff4757;
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 20rpx;
  border: none;
}

/* 今日记录预览 */
.today-records {
  background: white;
  margin: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.records-title {
  background: #4ecdc4;
  color: white;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}

.record-preview {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-preview:last-child {
  border-bottom: none;
}

.preview-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  width: 48rpx;
  text-align: center;
}

.preview-content {
  flex: 1;
}

.preview-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.preview-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.period-tag {
  background: #ff6b9d;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  margin-left: 8rpx;
}

.protection-tag {
  background: #4ecdc4;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  margin-left: 8rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 0;
  }
  
  .form-item {
    padding: 24rpx;
  }
  
  .form-actions {
    padding: 24rpx;
  }
}

/* 动画效果 */
.record-form {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}