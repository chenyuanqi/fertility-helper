/* pages/record/record.wxss */
.container {
  padding: 0;
  background: linear-gradient(180deg, var(--primary-50) 0%, var(--background-secondary) 20%);
  min-height: 100vh;
}

/* 头部样式优化 */
.header {
  background: linear-gradient(135deg, var(--primary-500), var(--primary-600));
  padding: var(--spacing-2xl) var(--spacing-lg) var(--spacing-xl);
  color: white;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: float 8s ease-in-out infinite;
}

.title {
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-bold);
  margin-bottom: var(--spacing-xs);
  position: relative;
  z-index: 1;
}

.date {
  font-size: var(--font-size-base);
  opacity: 0.9;
  position: relative;
  z-index: 1;
}

/* 记录类型切换优化 */
.record-types {
  display: flex;
  background: var(--background-primary);
  margin: var(--spacing-base);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xs);
  box-shadow: var(--shadow-lg);
  border: 1rpx solid var(--border-light);
}

.type-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-base) var(--spacing-sm);
  border-radius: var(--radius-lg);
  transition: var(--transition-base);
  position: relative;
  overflow: hidden;
}

.type-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, var(--primary-500), var(--primary-600));
  opacity: 0;
  transition: var(--transition-base);
}

.type-item.active::before {
  opacity: 1;
}

.type-item.active {
  color: white;
  box-shadow: var(--shadow-base);
  transform: translateY(-2rpx);
}

.type-icon {
  font-size: var(--font-size-lg);
  margin-bottom: var(--spacing-xs);
  position: relative;
  z-index: 1;
}

.type-label {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  position: relative;
  z-index: 1;
}

/* 表单样式 */
.record-form {
  background: white;
  margin: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: white;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

.form-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

/* 体温输入样式 */
.temperature-display {
  background: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.temperature-display:active {
  background: #f0f0f0;
  border-color: #ff6b9d;
}

.temperature-display .value {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b9d;
  margin-right: 8rpx;
}

.temperature-display .unit {
  font-size: 24rpx;
  color: #666;
}

/* 时间选择器样式 */
.picker-display {
  background: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

/* 经期标记样式 */
.period-markers {
  display: flex;
  gap: 32rpx;
}

.marker-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.marker-item text {
  font-size: 28rpx;
  color: #333;
}

/* 避孕措施样式 */
.protection-item,
.no-intercourse-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.protection-item text,
.no-intercourse-item text {
  font-size: 28rpx;
  color: #333;
}

/* 备注输入样式 */
.note-input {
  background: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
}

/* 操作按钮样式 */
.form-actions {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.save-btn {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 24rpx;
  border: none;
}

.save-btn[disabled] {
  background: #ccc;
}

.delete-btn {
  background: #ff4757;
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 20rpx;
  border: none;
}

/* 今日记录预览 */
.today-records {
  background: white;
  margin: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.records-title {
  background: #4ecdc4;
  color: white;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}

.record-preview {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-preview:last-child {
  border-bottom: none;
}

.preview-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  width: 48rpx;
  text-align: center;
}

.preview-content {
  flex: 1;
}

.preview-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.preview-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.period-tag {
  background: #ff6b9d;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  margin-left: 8rpx;
}

.protection-tag {
  background: #4ecdc4;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  margin-left: 8rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 0;
  }
  
  .form-item {
    padding: 24rpx;
  }
  
  .form-actions {
    padding: 24rpx;
  }
}

/* 动画效果 */
.record-form {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}