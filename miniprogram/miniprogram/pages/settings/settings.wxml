<!--设置页面-->
<view class="container">
  <!-- 个人信息 -->
  <view class="card">
    <view class="card-header">
      <text>👤 个人信息</text>
    </view>
    <view class="card-body">
      <view class="setting-item">
        <text class="setting-label">年龄</text>
        <input class="setting-input" type="number" value="{{userInfo.age}}" />
      </view>
      <view class="setting-item">
        <text class="setting-label">平均周期（天）</text>
        <input class="setting-input" type="number" value="{{userInfo.averageCycleLength}}" />
      </view>
    </view>
  </view>

  <!-- 提醒设置 -->
  <view class="card">
    <view class="card-header">
      <text>🔔 提醒设置</text>
    </view>
    <view class="card-body">
      <view class="setting-item">
        <text class="setting-label">清晨测温提醒</text>
        <switch 
          class="setting-switch" 
          checked="{{reminders.morningTemp}}"
          data-type="morningTemp"
          bindchange="onReminderToggle"
        />
      </view>
      <view class="setting-item">
        <text class="setting-label">易孕期提醒</text>
        <switch 
          class="setting-switch" 
          checked="{{reminders.fertileWindow}}"
          data-type="fertileWindow"
          bindchange="onReminderToggle"
        />
      </view>
    </view>
  </view>

  <!-- 数据管理 -->
  <view class="card">
    <view class="card-header">
      <text>📁 数据管理</text>
    </view>
    <view class="card-body">
      <view class="action-buttons">
        <button class="btn btn-outline btn-block mb-sm" bindtap="onExportData">
          📤 导出数据
        </button>
        <button class="btn btn-outline btn-block" bindtap="onClearData">
          🗑️ 清除数据
        </button>
      </view>
    </view>
  </view>

  <!-- 应用信息 -->
  <view class="card">
    <view class="card-header">
      <text>ℹ️ 应用信息</text>
    </view>
    <view class="card-body">
      <view class="info-item">
        <text class="info-label">版本号</text>
        <text class="info-value">v1.0.0</text>
      </view>
      <view class="info-item">
        <text class="info-label">开发者</text>
        <text class="info-value">备小孕团队</text>
      </view>
    </view>
  </view>

  <!-- 保存按钮 -->
  <view class="save-section">
    <button class="btn btn-primary btn-large btn-block" bindtap="onSave">
      保存设置
    </button>
  </view>
</view>
