/* pages/settings/settings.wxss */
.container {
  padding: 0;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 个人资料区域 */
.profile-section {
  background: linear-gradient(135deg, #ff6b9d, #ffb3c6);
  color: white;
  border-radius: 16rpx;
  padding: 48rpx;
  margin: 24rpx;
  margin-bottom: 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.2);
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  margin: 0 auto 24rpx;
}

.profile-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.profile-stats {
  display: flex;
  justify-content: space-between;
  opacity: 0.9;
  font-size: 28rpx;
}

/* 设置组 */
.settings-group {
  background: white;
  border-radius: 16rpx;
  margin: 0 24rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.group-header {
  padding: 32rpx 40rpx;
  background: #fafafa;
  border-bottom: 1px solid #f0f0f0;
}

.group-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 8rpx;
}

.group-description {
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 设置项 */
.settings-item {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1px solid #f0f0f0;
  transition: background-color 0.2s;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-item:active {
  background: #fafafa;
}

.settings-item.disabled {
  opacity: 0.5;
}

.item-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 48rpx;
  text-align: center;
}

.item-content {
  flex: 1;
}

.item-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #262626;
  margin-bottom: 4rpx;
}

.item-description {
  font-size: 24rpx;
  color: #8c8c8c;
}

.item-value {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-right: 16rpx;
}

.item-arrow {
  color: #d9d9d9;
  font-size: 24rpx;
}

/* 开关控件 */
.switch {
  position: relative;
  width: 88rpx;
  height: 48rpx;
  background: #d9d9d9;
  border-radius: 24rpx;
  cursor: pointer;
  transition: background-color 0.3s;
}

.switch.active {
  background: #ff6b9d;
}

.switch-thumb {
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 40rpx;
  height: 40rpx;
  background: white;
  border-radius: 50%;
  transition: transform 0.3s;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

.switch.active .switch-thumb {
  transform: translateX(40rpx);
}

/* 数据统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
  padding: 32rpx 40rpx;
}

.stat-card {
  text-align: center;
  padding: 32rpx;
  background: #fafafa;
  border-radius: 12rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #ff6b9d;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 危险操作 */
.danger-section .danger-title {
  color: #f5222d;
}

.danger-section .danger-item .danger-icon {
  color: #f5222d;
}

.danger-section .danger-item .danger-text {
  color: #f5222d;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx;
  color: #8c8c8c;
  font-size: 24rpx;
}

.version-number {
  margin-bottom: 16rpx;
}

.copyright {
  opacity: 0.7;
}

/* 模态框 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal {
  background-color: white;
  border-radius: 16rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80%;
  overflow: hidden;
}

.modal-header {
  padding: 32rpx;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
  text-align: center;
}

.modal-body {
  padding: 32rpx;
}

.modal-footer {
  padding: 32rpx;
  border-top: 1px solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

/* 输入组 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #262626;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-tip {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-top: 8rpx;
}

.picker-display {
  padding: 16rpx;
  border: 1px solid #d9d9d9;
  border-radius: 8rpx;
  background-color: white;
  color: #262626;
  font-size: 28rpx;
}