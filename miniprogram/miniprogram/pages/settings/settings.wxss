/* pages/settings/settings.wxss */
.container {
  padding: 0;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 个人资料区域 */
.profile-section {
  background: linear-gradient(135deg, #ff6b9d, #ffb3c6);
  color: white;
  border-radius: 16rpx;
  padding: 48rpx;
  margin: 24rpx;
  margin-bottom: 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.2);
}

/* 头像按钮样式 */
.avatar-button {
  background: transparent;
  border: none;
  padding: 0;
  margin-bottom: 24rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-button::after {
  border: none;
}

.avatar-button:active {
  transform: scale(0.98);
  transition: transform 0.1s ease;
}

.profile-avatar {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  margin: 0 auto 24rpx;
  cursor: pointer;
  transition: transform 0.2s;
  border: none;
  color: inherit;
  padding: 0;
  box-sizing: border-box;
  overflow: hidden;
}

.profile-avatar::after {
  border: none;
}

.profile-avatar:active {
  transform: scale(0.95);
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  display: block;
}

.avatar-edit-hint {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  white-space: nowrap;
}

.profile-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.profile-stats {
  display: flex;
  justify-content: space-between;
  opacity: 0.9;
  font-size: 28rpx;
}

/* 设置组 */
.settings-group {
  background: white;
  border-radius: 16rpx;
  margin: 0 24rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.group-header {
  padding: 32rpx 40rpx;
  background: #fafafa;
  border-bottom: 1px solid #f0f0f0;
}

.group-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 8rpx;
}

.group-description {
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 设置项 */
.settings-item {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1px solid #f0f0f0;
  transition: background-color 0.2s;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-item:active {
  background: #fafafa;
}

.settings-item.disabled {
  opacity: 0.5;
}

.item-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 48rpx;
  text-align: center;
}

.item-content {
  flex: 1;
}

.item-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #262626;
  margin-bottom: 4rpx;
}

.item-description {
  font-size: 24rpx;
  color: #8c8c8c;
}

.item-value {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-right: 16rpx;
}

.item-arrow {
  color: #d9d9d9;
  font-size: 24rpx;
}

/* 开关控件 */
.switch {
  position: relative;
  width: 88rpx;
  height: 48rpx;
  background: #d9d9d9;
  border-radius: 24rpx;
  cursor: pointer;
  transition: background-color 0.3s;
}

.switch.active {
  background: #ff6b9d;
}

.switch-thumb {
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 40rpx;
  height: 40rpx;
  background: white;
  border-radius: 50%;
  transition: transform 0.3s;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

.switch.active .switch-thumb {
  transform: translateX(40rpx);
}

/* 数据统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
  padding: 32rpx 40rpx;
}

.stat-card {
  text-align: center;
  padding: 32rpx;
  background: #fafafa;
  border-radius: 12rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #ff6b9d;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 危险操作 */
.danger-section .danger-title {
  color: #f5222d;
}

.danger-section .danger-item .danger-icon {
  color: #f5222d;
}

.danger-section .danger-item .danger-text {
  color: #f5222d;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx;
  color: #8c8c8c;
  font-size: 24rpx;
}

.version-number {
  margin-bottom: 16rpx;
}

.copyright {
  opacity: 0.7;
}

/* 模态框 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal {
  background-color: white;
  border-radius: 20rpx;
  width: 85%;
  max-width: 640rpx;
  max-height: 85vh;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
}

.modal-header {
  padding: 40rpx 40rpx 32rpx;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #262626;
  text-align: center;
}

.modal-body {
  padding: 40rpx;
}

.modal-footer {
  padding: 24rpx 40rpx 40rpx;
  border-top: 1px solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  gap: 32rpx;
}

/* 输入组 */
.input-group {
  margin-bottom: 40rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  display: block;
  font-size: 30rpx;
  color: #262626;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.input {
  width: 100%;
  padding: 28rpx 32rpx;
  border: 2rpx solid #e1e1e1;
  border-radius: 16rpx;
  background-color: white;
  color: #262626;
  font-size: 32rpx;
  line-height: 1.4;
  box-sizing: border-box;
  transition: border-color 0.2s, box-shadow 0.2s;
  -webkit-appearance: none;
  outline: none;
  min-height: 88rpx;
}

.input:focus {
  border-color: #ff6b9d;
  box-shadow: 0 0 0 4rpx rgba(255, 107, 157, 0.1);
}

.input::placeholder {
  color: #bfbfbf;
  font-size: 32rpx;
}

.input-tip {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-top: 12rpx;
}

.picker-display {
  padding: 28rpx 32rpx;
  border: 2rpx solid #e1e1e1;
  border-radius: 16rpx;
  background-color: white;
  color: #262626;
  font-size: 32rpx;
  line-height: 1.4;
  box-sizing: border-box;
  transition: border-color 0.2s, box-shadow 0.2s;
  min-height: 88rpx;
  display: flex;
  align-items: center;
}

/* 按钮样式 */
.btn {
  flex: 1;
  padding: 28rpx 32rpx;
  border-radius: 16rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  cursor: pointer;
  transition: all 0.2s;
  box-sizing: border-box;
  line-height: 1.4;
  min-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background: #ff6b9d;
  color: white;
}

.btn-primary:active {
  background: #e55a89;
  transform: scale(0.98);
}

.btn-outline {
  background: transparent;
  color: #8c8c8c;
  border: 2rpx solid #e1e1e1;
}

.btn-outline:active {
  background: #fafafa;
  transform: scale(0.98);
}

.btn-block {
  width: 100%;
  flex: none;
}

/* 调试模式指示器 */
.debug-indicator {
  margin-top: 16rpx;
  padding: 12rpx 20rpx;
  background: #fff3cd;
  border: 1px solid #ffeaa7;
  border-radius: 8rpx;
  display: inline-block;
}

.debug-text {
  font-size: 24rpx;
  color: #856404;
  font-weight: 500;
}

