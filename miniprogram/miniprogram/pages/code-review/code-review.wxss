/* Code Review Page Styles */

.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Review Status Card */
.review-status {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.status-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.status-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.status-info {
  flex: 1;
}

.status-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.status-progress {
  font-size: 24rpx;
  color: #999;
}

.status-icon {
  font-size: 60rpx;
  margin-left: 20rpx;
}

.status-ready .status-icon {
  color: #4CAF50;
}

.status-running .status-icon {
  color: #2196F3;
  animation: spin 2s linear infinite;
}

.status-completed .status-icon {
  color: #4CAF50;
}

.status-failed .status-icon {
  color: #f44336;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Progress Bar */
.progress-container {
  margin: 30rpx 0;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #45a049);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

/* Control Buttons */
.control-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin: 15rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background: linear-gradient(45deg, #4CAF50, #45a049);
  color: white;
}

.btn-secondary {
  background: linear-gradient(45deg, #2196F3, #1976D2);
  color: white;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #ddd;
  color: #666;
}

.btn:disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* Review Results */
.results-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.results-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

/* Score Display */
.score-display {
  text-align: center;
  margin-bottom: 30rpx;
}

.score-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 0 auto 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.score-circle.grade-a {
  background: linear-gradient(45deg, #4CAF50, #45a049);
}

.score-circle.grade-b {
  background: linear-gradient(45deg, #2196F3, #1976D2);
}

.score-circle.grade-c {
  background: linear-gradient(45deg, #FF9800, #F57C00);
}

.score-circle.grade-d {
  background: linear-gradient(45deg, #f44336, #d32f2f);
}

.score-text {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
}

.grade-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.score-description {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

/* Statistics Grid */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  text-align: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* Issues List */
.issues-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.issues-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.issue-item {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  border-left: 4rpx solid #ddd;
}

.issue-item.severity-critical {
  border-left-color: #f44336;
  background: #ffebee;
}

.issue-item.severity-important {
  border-left-color: #FF9800;
  background: #fff3e0;
}

.issue-item.severity-normal {
  border-left-color: #2196F3;
  background: #e3f2fd;
}

.issue-item.severity-suggestion {
  border-left-color: #4CAF50;
  background: #e8f5e8;
}

.issue-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.issue-severity {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  color: white;
  font-weight: bold;
}

.severity-critical {
  background: #f44336;
}

.severity-important {
  background: #FF9800;
}

.severity-normal {
  background: #2196F3;
}

.severity-suggestion {
  background: #4CAF50;
}

.issue-category {
  font-size: 24rpx;
  color: #666;
  background: #e0e0e0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.issue-description {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.issue-file {
  font-size: 24rpx;
  color: #666;
  font-family: monospace;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  color: #ddd;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-description {
  font-size: 24rpx;
  color: #999;
}

/* Loading State */
.loading-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top: 4rpx solid #2196F3;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.loading-description {
  font-size: 24rpx;
  color: #999;
}

/* Action Buttons */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.action-buttons .btn {
  flex: 1;
  margin: 0;
}

/* Responsive Design */
@media (max-width: 750rpx) {
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .action-buttons .btn {
    margin: 10rpx 0;
  }
}