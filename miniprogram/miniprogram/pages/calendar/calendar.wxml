<!--日历页面-->
<view class="container">
  <!-- 月份导航 -->
  <view class="month-nav">
    <button class="nav-btn" bindtap="onPrevMonth">‹</button>
    <text class="month-title">{{currentYear}}年{{currentMonth}}月</text>
    <button class="nav-btn" bindtap="onNextMonth">›</button>
  </view>

  <!-- 日历网格 -->
  <view class="calendar-container">
    <!-- 星期标题 -->
    <view class="weekdays">
      <view class="weekday">日</view>
      <view class="weekday">一</view>
      <view class="weekday">二</view>
      <view class="weekday">三</view>
      <view class="weekday">四</view>
      <view class="weekday">五</view>
      <view class="weekday">六</view>
    </view>

    <!-- 日期网格 -->
    <view class="calendar-grid">
      <!-- 模拟日期数据 -->
      <view class="day-cell" wx:for="{{35}}" wx:key="index">
        <view class="day-number">{{(index % 31) + 1}}</view>
        <view class="day-indicators">
          <view class="indicator temp" wx:if="{{index % 3 === 0}}"></view>
          <view class="indicator flow" wx:if="{{index % 5 === 0}}"></view>
          <view class="indicator intercourse" wx:if="{{index % 7 === 0}}"></view>
        </view>
      </view>
    </view>
  </view>

  <!-- 选中日期详情 -->
  <view class="date-detail" wx:if="{{selectedDate}}">
    <view class="card">
      <view class="card-header">
        <text>📅 {{selectedDate}} 详情</text>
      </view>
      <view class="card-body">
        <view class="detail-item">
          <text class="detail-label">体温：</text>
          <text class="detail-value">36.8℃</text>
        </view>
        <view class="detail-item">
          <text class="detail-label">经量：</text>
          <text class="detail-value">中量</text>
        </view>
        <view class="detail-item">
          <text class="detail-label">同房：</text>
          <text class="detail-value">是</text>
        </view>
      </view>
    </view>
  </view>
</view>
