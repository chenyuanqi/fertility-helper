/* pages/chart/chart.wxss */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #ff6b9d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 周期信息头部 */
.chart-header {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.cycle-info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.cycle-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #262626;
}

.cycle-navigation {
  display: flex;
  gap: 16rpx;
}

.nav-btn {
  width: 64rpx;
  height: 64rpx;
  border: none;
  border-radius: 50%;
  background: #f5f5f5;
  color: #8c8c8c;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.nav-btn:hover {
  background: #e6e6e6;
}

.cycle-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #ff6b9d;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 图表容器 */
.chart-container {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  min-height: 800rpx;
  position: relative;
}

.chart-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
}

.chart-actions {
  display: flex;
  gap: 16rpx;
}

.chart-btn {
  padding: 12rpx 24rpx;
  border: 2rpx solid #e6e6e6;
  background: white;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #8c8c8c;
  cursor: pointer;
}

.chart-btn.active {
  background: #ff6b9d;
  color: white;
  border-color: #ff6b9d;
}

/* 模拟图表 */
.chart-mock {
  width: 100%;
  height: 600rpx;
  position: relative;
  background: linear-gradient(to bottom, #f8f9fa 0%, #f8f9fa 100%);
  border: 2rpx solid #e6e6e6;
  border-radius: 16rpx;
  overflow: hidden;
}

/* 缩放滚动视图 */
.chart-scroll-view {
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
  scroll-behavior: smooth;
}

/* 图表头部控制区 */
.chart-header-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid rgba(255, 107, 157, 0.1);
}

.chart-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  justify-content: center;
  margin-bottom: 12rpx;
}

.title-icon {
  font-size: 36rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 157, 0.2);
}

.chart-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.chart-subtitle {
  font-size: 22rpx;
  color: #888888;
  margin-left: 0;
}

/* 视图模式切换 */
.mode-switcher {
  display: flex;
  background: rgba(255, 107, 157, 0.1);
  border-radius: 25rpx;
  padding: 6rpx;
  gap: 4rpx;
  min-width: 200rpx;
}

.mode-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  border: none;
  border-radius: 20rpx;
  background: transparent;
  color: #666666;
  font-size: 22rpx;
  transition: all 0.3s ease;
  flex: 1;
  min-width: 0;
}

.mode-btn.active {
  background: white;
  color: #ff6b9d;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 157, 0.2);
}

.mode-icon {
  font-size: 24rpx;
  flex-shrink: 0;
}

.mode-text {
  font-size: 22rpx;
  font-weight: 500;
}

/* 图表工具栏 */
.chart-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.5);
  border-bottom: 1rpx solid rgba(255, 107, 157, 0.1);
}

.toolbar-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.toolbar-label {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

.button-group {
  display: flex;
  background: rgba(255, 107, 157, 0.1);
  border-radius: 20rpx;
  padding: 2rpx;
  gap: 2rpx;
}

.tool-btn {
  padding: 12rpx 20rpx;
  border: none;
  border-radius: 18rpx;
  background: transparent;
  color: #666666;
  font-size: 22rpx;
  transition: all 0.3s ease;
}

.tool-btn.active {
  background: white;
  color: #ff6b9d;
  box-shadow: 0 1rpx 4rpx rgba(255, 107, 157, 0.2);
}

.zoom-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 107, 157, 0.1);
  border: none;
  border-radius: 20rpx;
  color: #ff6b9d;
  font-size: 22rpx;
  transition: all 0.3s ease;
}

.zoom-btn:active {
  background: rgba(255, 107, 157, 0.2);
  transform: scale(0.95);
}

.zoom-icon {
  font-size: 24rpx;
}

.zoom-text {
  font-size: 22rpx;
}

/* 图表视图区域 */
.chart-view-area {
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 249, 250, 0.8) 100%);
  border-radius: 0 0 24rpx 24rpx;
  min-height: 350rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.calendar-view-area {
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 249, 250, 0.8) 100%);
  border-radius: 0 0 24rpx 24rpx;
}

/* 缩放滚动视图 */
.chart-scroll-view {
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
  scroll-behavior: smooth;
}

.chart-scroll-view::-webkit-scrollbar {
  height: 6rpx;
}

.chart-scroll-view::-webkit-scrollbar-track {
  background: #f0f0f0;
  border-radius: 3rpx;
}

.chart-scroll-view::-webkit-scrollbar-thumb {
  background: #cccccc;
  border-radius: 3rpx;
}

.chart-scroll-view::-webkit-scrollbar-thumb:hover {
  background: #999999;
}

/* 信息区域 */
.info-section {
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 卡片头部 */
.card-header {
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(255, 107, 157, 0.1);
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 图例 */
.chart-legend {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.legend-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 24rpx;
}

.legend-items {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 24rpx;
  color: #8c8c8c;
}

.legend-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

.legend-icon.temperature {
  background: #ff6b9d;
}

.legend-icon.menstruation {
  background: #ff9999;
}

.legend-icon.intimacy {
  background: #4ecdc4;
}

.legend-icon.ovulation {
  background: #faad14;
}

.legend-icon.coverline {
  background: #666666;
  border-radius: 0;
  height: 4rpx;
}

/* 数据详情 */
.data-details {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.details-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.selected-date {
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
}

.details-content {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
}

.detail-item {
  text-align: center;
}

.detail-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff6b9d;
  margin-bottom: 8rpx;
}

.detail-label {
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .chart-header,
  .chart-container,
  .chart-legend,
  .data-details {
    margin: 24rpx;
  }
  
  .chart-header {
    padding: 24rpx;
  }
  
  .cycle-title {
    font-size: 32rpx;
  }
  
  .nav-btn {
    width: 56rpx;
    height: 56rpx;
    font-size: 24rpx;
  }
  
  .stat-value {
    font-size: 36rpx;
  }
  
  .chart-title {
    font-size: 28rpx;
  }
  
  .chart-mock {
    height: 500rpx;
  }
  
  .legend-items {
    grid-template-columns: 1fr;
    gap: 12rpx;
  }
  
  .details-content {
    grid-template-columns: repeat(3, 1fr);
    gap: 24rpx;
  }
  
  .detail-value {
    font-size: 32rpx;
  }
}

/* 动画效果 */
.chart-header {
  animation: fadeInUp 0.5s ease-out;
}

.chart-container {
  animation: fadeInUp 0.5s ease-out 0.1s both;
}

.chart-legend {
  animation: fadeInUp 0.5s ease-out 0.2s both;
}

.data-details {
  animation: fadeInUp 0.5s ease-out 0.3s both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 悬浮效果 */
.stat-item,
.chart-btn {
  transition: all 0.3s ease;
}

.stat-item:active {
  transform: translateY(-2rpx);
}

.chart-btn:active {
  transform: scale(0.95);
}
