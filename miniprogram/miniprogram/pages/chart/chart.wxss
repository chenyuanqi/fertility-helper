/* 页面根容器 */
.chart-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: white;
  font-size: 28rpx;
}

/* 图表头部 */
.chart-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 周期导航行 */
.cycle-nav-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
}

.cycle-day-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.cycle-day {
  font-size: 36rpx;
  font-weight: bold;
  color: #e74c3c;
  text-align: center;
}

/* 日期范围行 */
.cycle-date-row {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx 0 20rpx;
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: transparent;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  color: #999999;
}

.nav-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.5);
}

.nav-icon {
  font-size: 48rpx;
  font-weight: bold;
}

.cycle-date-range {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  text-align: center;
}

/* 周期统计 */
.cycle-stats {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #f5f5f5;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #e74c3c;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 图表容器 */
.chart-container {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 图表控制区域 */
.chart-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx 16rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.view-mode-tabs {
  display: flex;
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 4rpx;
}

.tab-btn {
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #666;
  background: transparent;
  border: none;
  transition: all 0.3s ease;
}

.tab-btn.active {
  background: #667eea;
  color: white;
}

.chart-actions {
  display: flex;
  gap: 16rpx;
}

.chart-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f8f9fa;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.chart-btn.active {
  background: #667eea;
  color: white;
}

.btn-icon {
  font-size: 24rpx;
}

/* 图表标题 */
.chart-title {
  text-align: center;
  padding: 16rpx 32rpx;
}

.chart-title text {
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
}

/* 图表区域 */
.chart-mock {
  background: #ffffff;
  border-radius: 0 0 24rpx 24rpx;
  padding: 32rpx;
  min-height: 600rpx;
  position: relative;
  overflow: hidden;
  cursor: pointer;
  transition: all 0.3s ease;
}

.chart-mock:active {
  transform: scale(0.98);
}

/* 图表提示 */
.chart-hint {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  animation: pulse 2s infinite;
}

.chart-hint-icon {
  font-size: 20rpx;
}

@keyframes pulse {
  0%, 100% { opacity: 0.7; }
  50% { opacity: 1; }
}

/* 图例说明 */
.chart-legend {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.legend-title {
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 24rpx;
}

.legend-items {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  gap: 24rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.legend-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 2rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.legend-icon.temperature {
  background: #ff6b6b;
}

.legend-icon.menstruation {
  background: #e74c3c;
}

.legend-icon.intimacy {
  background: #9b59b6;
}

.legend-icon.ovulation {
  background: #ffa726;
}

.legend-icon.coverline {
  background: #3498db;
  border-radius: 2rpx;
  height: 4rpx;
}

.legend-item text {
  font-size: 24rpx;
  color: #666;
}

/* 数据详情弹窗 */
.data-details {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  z-index: 1000;
  min-width: 500rpx;
}

.details-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.selected-date {
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f8f9fa;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
}

.details-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.detail-value {
  font-size: 24rpx;
  font-weight: bold;
  color: #2c3e50;
}

.detail-label {
  font-size: 22rpx;
  color: #666;
}

/* 全屏图表模态框 */
.chart-fullscreen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.9);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  padding: 40rpx 20rpx 20rpx;
}

.chart-fullscreen-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
  padding: 0 20rpx;
}

.chart-fullscreen-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  text-align: left;
}

.chart-fullscreen-close {
  background: rgba(255, 255, 255, 0.15);
  color: white;
  border: none;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
  position: absolute;
  right: 0;
}

.chart-fullscreen-close:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

.chart-fullscreen-content {
  background: white;
  border-radius: 24rpx;
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.chart-scroll-container {
  flex: 1;
}

.chart-expanded {
  width: 1200rpx;
  height: 100%;
  padding: 40rpx;
  background: #ffffff;
  border-radius: 12rpx;
  position: relative;
}

/* 图表数据点样式优化 */
.chart-expanded chart {
  background: #ffffff;
}

.chart-fullscreen-tips {
  text-align: center;
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 20rpx;
  margin: 20rpx;
}

.tips-icon {
  font-size: 32rpx;
}

.tips-text {
  font-size: 28rpx;
  font-weight: 500;
}

.chart-fullscreen-description {
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  padding: 20rpx 40rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
  margin: 20rpx 20rpx 20rpx;
  line-height: 1.5;
}
