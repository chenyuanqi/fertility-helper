/* pages/chart/chart.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #ff6b9d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 周期信息头部 */
.chart-header {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.cycle-info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.cycle-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.cycle-navigation {
  display: flex;
  gap: 16rpx;
}

.nav-btn {
  width: 64rpx;
  height: 64rpx;
  border: none;
  border-radius: 50%;
  background: #f8f8f8;
  color: #666666;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-btn:active {
  background: #e0e0e0;
}

.nav-btn.today-btn {
  background: #ff6b9d;
  color: white;
  font-weight: bold;
}

.nav-btn.today-btn:active {
  background: #e85a8a;
}

.cycle-stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b9d;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

/* 图表容器 */
.chart-container {
  background: white;
  border-radius: 16rpx;
  margin: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.chart-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.chart-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.chart-actions {
  display: flex;
  gap: 16rpx;
  align-items: center;
  flex-wrap: wrap;
}

.view-mode-btns {
  display: flex;
  gap: 16rpx;
  margin-left: 16rpx;
  padding-left: 16rpx;
  border-left: 1rpx solid #e0e0e0;
}

.chart-btn {
  padding: 12rpx 24rpx;
  border: 1rpx solid #e0e0e0;
  background: #ffffff;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666666;
}

.chart-btn.active {
  background: #ff6b9d;
  color: #ffffff;
  border-color: #ff6b9d;
}

/* 缩放滚动视图 */
.chart-scroll-view {
  width: 100%;
  white-space: nowrap;
  overflow-x: auto;
  scroll-behavior: smooth;
}

.chart-scroll-view::-webkit-scrollbar {
  height: 6rpx;
}

.chart-scroll-view::-webkit-scrollbar-track {
  background: #f0f0f0;
  border-radius: 3rpx;
}

.chart-scroll-view::-webkit-scrollbar-thumb {
  background: #cccccc;
  border-radius: 3rpx;
}

.chart-scroll-view::-webkit-scrollbar-thumb:hover {
  background: #999999;
}

/* 图例说明 */
.chart-legend {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.legend-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

.legend-items {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: #666666;
}

.legend-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

.legend-icon.temperature {
  background: #ff6b9d;
}

.legend-icon.menstrual {
  background: #ff9999;
}

.legend-icon.high-temp {
  background: #ff3333;
}

.legend-emoji {
  font-size: 24rpx;
}

/* 数据统计卡片 */
.data-summary {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.summary-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

.summary-content {
  display: flex;
  justify-content: space-around;
}

.summary-item {
  text-align: center;
}

.summary-label {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.summary-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #4ecdc4;
}

/* 快速操作 */
.quick-actions {
  padding: 32rpx 16rpx;
  margin-bottom: 100rpx; /* 为底部tabbar留空间 */
}

.action-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: white;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 30rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .chart-header,
  .chart-legend,
  .data-summary {
    margin: 12rpx;
    padding: 24rpx;
  }
  
  .cycle-stats,
  .legend-items,
  .summary-content {
    gap: 12rpx;
  }
  
  .stat-value,
  .summary-value {
    font-size: 28rpx;
  }
  
  .chart-container {
    margin: 12rpx;
  }
}

/* 动画效果 */
.chart-container,
.chart-header,
.chart-legend,
.data-summary {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}