/* 图表页面样式 */

.month-selector {
  margin-bottom: 32rpx;
}

.month-header {
  text-align: center;
  padding: 24rpx;
}

.month-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff6b9d;
}

/* 图表容器 */
.chart-container {
  background: white;
  border-radius: 8rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.chart-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  color: #8c8c8c;
}

.chart-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.chart-text {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.chart-desc {
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 图表说明 */
.chart-legend {
  display: flex;
  justify-content: space-around;
  padding: 24rpx;
  background: white;
  border-radius: 8rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
}

.legend-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}

.legend-dot.temp {
  background-color: #ff6b9d;
}

.legend-dot.flow {
  background: linear-gradient(135deg, #ff6b9d, #ff80bf);
}

.legend-dot.intercourse {
  background-color: #4ecdc4;
}

/* 统计数据 */
.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff6b9d;
}

.stat-label {
  font-size: 24rpx;
  color: #8c8c8c;
}
