/* 数据统计卡片 */
.summary-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 6rpx 24rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.summary-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 12rpx;
  padding: 20rpx 12rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 107, 157, 0.05);
}

.summary-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.summary-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summary-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b9d;
  margin-bottom: 4rpx;
  display: block;
}

.summary-label {
  font-size: 22rpx;
  color: #888888;
  font-weight: 500;
}

/* 快速操作区域 */
.action-section {
  margin: 20rpx;
  margin-bottom: 120rpx; /* 为底部tabbar留空间 */
}

.record-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  border: none;
  border-radius: 24rpx;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.3);
  transition: all 0.3s ease;
}

.record-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.4);
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.btn-icon {
  font-size: 40rpx;
}

.btn-text-group {
  text-align: left;
}

.btn-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.btn-subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.btn-arrow {
  font-size: 36rpx;
  opacity: 0.8;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .chart-header,
  .chart-container {
    margin: 16rpx;
  }
  
  .chart-header {
    padding: 32rpx 24rpx;
  }
  
  .chart-header-controls {
    padding: 24rpx;
  }
  
  .header-top-section {
    gap: 16rpx;
    flex-direction: column;
    align-items: stretch;
  }
  
  .cycle-navigation-section {
    height: 70rpx;
  }
  
  .nav-btn {
    width: 50rpx;
    height: 50rpx;
    font-size: 36rpx;
  }
  
  .nav-icon {
    font-size: 40rpx;
  }
  
  .period-display {
    padding: 12rpx 24rpx;
    min-height: 50rpx;
  }
  
  .period-text {
    font-size: 20rpx;
  }
  
  .period-day {
    font-size: 28rpx;
  }
  
  .today-button {
    padding: 12rpx 20rpx;
    font-size: 22rpx;
    align-self: center;
  }
  
  .today-icon {
    font-size: 24rpx;
  }
  
  .today-text {
    font-size: 22rpx;
  }
  
  .title-wrapper {
    gap: 12rpx;
  }
  
  .title-icon {
    width: 60rpx;
    height: 60rpx;
    font-size: 36rpx;
  }
  
  .chart-title {
    font-size: 28rpx;
  }
  
  .chart-subtitle {
    font-size: 22rpx;
  }
  
  .info-section {
    margin: 16rpx;
  }
  
  .legend-card,
  .summary-card {
    padding: 24rpx;
  }
  
  .legend-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .summary-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 12rpx;
  }
  
  .stats-grid {
    gap: 12rpx;
  }
  
  .stat-card {
    padding: 16rpx;
  }
  
  .stat-value {
    font-size: 28rpx;
  }
  
  .summary-value {
    font-size: 28rpx;
  }
  
  .summary-item {
    padding: 16rpx 8rpx;
  }
  
  .summary-icon {
    font-size: 32rpx;
  }
  
  .period-day {
    font-size: 32rpx;
  }
  
  .chart-title {
    font-size: 28rpx;
  }
  
  .chart-subtitle {
    font-size: 22rpx;
  }
  
  .mode-switcher {
    min-width: 180rpx;
  }
  
  .mode-btn {
    padding: 10rpx 12rpx;
    font-size: 20rpx;
  }
  
  .mode-icon {
    font-size: 22rpx;
  }
  
  .mode-text {
    font-size: 20rpx;
  }
  
  .chart-toolbar {
    flex-direction: column;
    gap: 16rpx;
    align-items: stretch;
    padding: 16rpx 24rpx;
  }
  
  .toolbar-section {
    justify-content: space-between;
  }
  
  .record-btn {
    padding: 24rpx;
  }
  
  .btn-title {
    font-size: 28rpx;
  }
  
  .btn-subtitle {
    font-size: 22rpx;
  }
}

/* 高级动画效果 */
.chart-header {
  animation: fadeInUp 0.5s ease-out;
  animation-fill-mode: both;
}

.chart-container {
  animation: fadeInUp 0.5s ease-out 0.1s both;
}

.legend-card {
  animation: fadeInUp 0.5s ease-out 0.2s both;
}

.summary-card {
  animation: fadeInUp 0.5s ease-out 0.2s both;
}

.record-btn {
  animation: fadeInUp 0.5s ease-out 0.3s both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 悬浮效果 */
.stat-card,
.summary-item {
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.stat-card:active {
  transform: translateY(-4rpx) scale(1.02);
}

/* 渐变背景动画 */
.today-button {
  background-size: 200% 200%;
  animation: gradientShift 3s ease infinite;
}

@keyframes gradientShift {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

/* 微妙的阴影动画 */
.record-btn {
  background-size: 200% 200%;
  animation: gradientShift 4s ease infinite, pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.3);
  }
  50% {
    box-shadow: 0 12rpx 32rpx rgba(255, 107, 157, 0.4);
  }
}