/* 图表数据点样式优化 */
.chart-expanded chart {
  background: transparent;
}

.chart-fullscreen-tips {
  text-align: center;
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 20rpx;
  margin: 20rpx;
}

.tips-icon {
  font-size: 32rpx;
}

.tips-text {
  font-size: 28rpx;
  font-weight: 500;
}

.chart-fullscreen-description {
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  padding: 20rpx 40rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
  margin: 20rpx 20rpx 20rpx;
  line-height: 1.5;
}
