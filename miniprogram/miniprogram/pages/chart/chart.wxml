<!--图表页面-->
<view class="container">
  <!-- 月份切换 -->
  <view class="month-selector">
    <view class="month-header">
      <text class="month-title">{{currentYear}}年{{currentMonth}}月</text>
    </view>
  </view>

  <!-- 三合一图表区域 -->
  <view class="chart-container">
    <view class="chart-placeholder">
      <view class="chart-icon">📈</view>
      <text class="chart-text">三合一图表</text>
      <text class="chart-desc">体温折线 + 经量背景 + 同房图标</text>
    </view>
  </view>

  <!-- 图表说明 -->
  <view class="chart-legend">
    <view class="legend-item">
      <view class="legend-dot temp"></view>
      <text>体温折线</text>
    </view>
    <view class="legend-item">
      <view class="legend-dot flow"></view>
      <text>经量背景</text>
    </view>
    <view class="legend-item">
      <view class="legend-dot intercourse"></view>
      <text>同房记录</text>
    </view>
  </view>

  <!-- 数据统计 -->
  <view class="stats-section">
    <view class="card">
      <view class="card-header">
        <text>📈 本月统计</text>
      </view>
      <view class="card-body">
        <view class="stats-grid">
          <view class="stat-item">
            <text class="stat-value">28</text>
            <text class="stat-label">平均周期</text>
          </view>
          <view class="stat-item">
            <text class="stat-value">36.7</text>
            <text class="stat-label">平均体温</text>
          </view>
          <view class="stat-item">
            <text class="stat-value">5</text>
            <text class="stat-label">记录天数</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
