.container { padding: 24rpx; background: linear-gradient(135deg,#667eea,#764ba2); min-height: 100vh; }
.card { background:#fff;border-radius:20rpx;padding:24rpx;margin-bottom:16rpx;box-shadow:0 6rpx 18rpx rgba(0,0,0,0.06); }
.header-card { display:flex;flex-direction:column;gap:12rpx; }
.header-row { display:flex;align-items:center;justify-content:space-between; }
.title { font-size:34rpx;font-weight:700;color:#2c3e50; }
.date-pill { padding:10rpx 16rpx;background:#f8f9fa;border-radius:16rpx;font-size:26rpx;color:#333; }
.input-card { display:flex;flex-direction:column;gap:12rpx; }
.input { width:100%;min-height:180rpx;background:#f8f9fa;border-radius:12rpx;padding:16rpx;font-size:26rpx;color:#333; }
.btn { background: #eef1f6;border:none;border-radius:14rpx;padding:16rpx 24rpx;font-size:26rpx;color:#333; }
.btn-primary { background: linear-gradient(135deg,#667eea,#764ba2); color:#fff; }
.form-card { display:flex;flex-direction:column;gap:24rpx; }
.section { display:flex;flex-direction:column;gap:12rpx; }
.section-title { font-size:26rpx;color:#6c757d; }
.row { display:flex;align-items:center;gap:12rpx; }
.space-between { justify-content:space-between; }
.field { flex:1;background:#f8f9fa;border-radius:12rpx;padding:16rpx;font-size:28rpx;color:#333; }
.time-pill { padding:12rpx 16rpx;background:#eef1f6;border-radius:12rpx;font-size:26rpx;color:#333; }
.flow-grid { display:flex;gap:12rpx; }
.flow-chip { padding:10rpx 16rpx;border-radius:16rpx;background:#f1f3f5;color:#333;font-size:26rpx; }
.flow-chip.active { background:#ffe3ea;color:#ff6b9d;font-weight:600; }
.color-grid { display:flex;gap:16rpx;flex-wrap:wrap; }
.color-item { display:flex;align-items:center;gap:8rpx;padding:8rpx 12rpx;border-radius:12rpx;background:#f8f9fa; }
.color-item.active { outline:2rpx solid #ff6b9d; }
.color-dot { width:20rpx;height:20rpx;border-radius:50%; }
.actions { display:flex;gap:12rpx; }
