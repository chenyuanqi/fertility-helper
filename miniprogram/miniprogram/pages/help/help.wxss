/* pages/help/help.wxss - 使用说明页面样式 */

.help-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 40rpx;
}

/* 页面头部 */
.help-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  margin: 20rpx;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.header-content {
  text-align: center;
  margin-bottom: 32rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 搜索框 */
.search-container {
  margin-bottom: 32rpx;
}

.search-box {
  position: relative;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e9ecef;
  transition: border-color 0.3s ease;
}

.search-box:focus-within {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.search-icon {
  font-size: 32rpx;
  color: #6c757d;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #495057;
  background: transparent;
  border: none;
  outline: none;
}

.search-input::placeholder {
  color: #adb5bd;
}

.search-clear {
  font-size: 24rpx;
  color: #6c757d;
  padding: 8rpx;
  cursor: pointer;
  border-radius: 50%;
  transition: background-color 0.2s ease;
}

.search-clear:active {
  background: rgba(108, 117, 125, 0.1);
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  gap: 16rpx;
  justify-content: center;
}

.action-btn {
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  background: #667eea;
  color: white;
  border: none;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: #5a67d8;
  transform: scale(0.95);
}

/* 帮助内容 */
.help-content {
  margin: 0 20rpx;
}

.help-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.help-section.expanded {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

/* 章节标题 */
.section-header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.section-header:active {
  background: rgba(102, 126, 234, 0.05);
}

.section-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.section-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.section-arrow {
  font-size: 24rpx;
  color: #7f8c8d;
  transition: transform 0.3s ease;
}

.section-arrow.rotated {
  transform: rotate(180deg);
}

/* 章节内容 */
.section-content {
  border-top: 1rpx solid #e9ecef;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    max-height: 0;
  }
  to {
    opacity: 1;
    max-height: 2000rpx;
  }
}

/* 帮助项目 */
.help-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f8f9fa;
}

.help-item:last-child {
  border-bottom: none;
}

.item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.item-title::before {
  content: "•";
  color: #667eea;
  font-weight: bold;
  margin-right: 12rpx;
  font-size: 32rpx;
}

.item-content {
  font-size: 26rpx;
  color: #6c757d;
  line-height: 1.6;
  white-space: pre-line;
  padding-left: 24rpx;
}

/* 底部区域 */
.help-footer {
  margin: 40rpx 20rpx 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.footer-tips {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 16rpx;
  border-left: 6rpx solid #667eea;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #495057;
  margin-bottom: 12rpx;
}

.tips-content {
  font-size: 24rpx;
  color: #6c757d;
  line-height: 1.5;
}

.footer-actions {
  display: flex;
  gap: 20rpx;
}

.footer-btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.footer-btn.primary {
  background: #667eea;
  color: white;
}

.footer-btn.primary:active {
  background: #5a67d8;
  transform: scale(0.98);
}

.footer-btn.secondary {
  background: #f8f9fa;
  color: #6c757d;
  border: 2rpx solid #e9ecef;
}

.footer-btn.secondary:active {
  background: #e9ecef;
  transform: scale(0.98);
}

/* 无搜索结果 */
.no-results {
  text-align: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  margin: 40rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.no-results-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.no-results-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #495057;
  margin-bottom: 16rpx;
}

.no-results-text {
  font-size: 26rpx;
  color: #6c757d;
  line-height: 1.5;
  margin-bottom: 32rpx;
}

.no-results-btn {
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  background: #667eea;
  color: white;
  border: none;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.no-results-btn:active {
  background: #5a67d8;
  transform: scale(0.95);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .help-header {
    margin: 10rpx;
    padding: 30rpx;
  }
  
  .header-title {
    font-size: 40rpx;
  }
  
  .help-content {
    margin: 0 10rpx;
  }
  
  .help-footer {
    margin: 30rpx 10rpx 0;
  }
  
  .footer-actions {
    flex-direction: column;
  }
}