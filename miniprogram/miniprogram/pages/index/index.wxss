}

.fab-main.fab-active {
  transform: rotate(45deg);
  background: linear-gradient(135deg, #ff6b6b, #ff5252);
}

.fab-icon {
  font-size: 36rpx;
  color: white;
  font-weight: 700;
  transition: all 0.3s ease;
