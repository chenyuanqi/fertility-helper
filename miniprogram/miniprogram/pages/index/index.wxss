/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 授权弹窗样式 */
.auth-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 40rpx;
}

.auth-card {
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeInUp 0.6s ease-out;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.auth-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 24rpx;
  font-size: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
  color: white;
}

.auth-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.auth-content {
  text-align: center;
  margin-bottom: 40rpx;
}

.auth-desc {
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 20rpx;
  display: block;
}

.auth-privacy {
  font-size: 24rpx;
  color: #6c757d;
  display: block;
}

.auth-footer {
  width: 100%;
}

.auth-button {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.auth-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: white;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 日期头部 */
.date-header {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(12rpx);
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  animation: fadeInUp 0.6s ease-out;
}

.greeting-section {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.greeting-main {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.greeting-emoji {
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  background: transparent;
  border-radius: 50%;
  box-shadow: none;
}

.greeting-text {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.greeting {
  font-size: 22rpx;
  font-weight: 500;
  color: #34495e;
}

.greeting-tip {
  font-size: 18rpx;
  color: #6c757d;
  font-weight: normal;
}

.date-info {
  font-size: 18rpx;
  color: #7f8c8d;
  margin-top: 4rpx;
}

/* 周期信息卡片 */
.cycle-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeInUp 0.6s ease-out 0.1s both;
}

.cycle-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.cycle-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.cycle-day {
  font-size: 36rpx;
  font-weight: bold;
  color: #e74c3c;
}

/* 周期天数单独显示 */
.cycle-day-info {
  text-align: center;
  margin-bottom: 24rpx;
  padding: 28rpx;
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.3);
}

.cycle-day-text {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 未设置周期提示 */
.no-cycle-info {
  text-align: center;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  cursor: pointer;
}

.no-cycle-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  display: block;
  margin-bottom: 8rpx;
}

.no-cycle-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.cycle-info {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24rpx;
}

.cycle-item {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.cycle-item-clickable {
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
  color: white;
  cursor: pointer;
}

.cycle-item-clickable:active {
  transform: scale(0.98);
}

.cycle-label {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 8rpx;
  display: block;
}

.cycle-item-clickable .cycle-label {
  color: rgba(255, 255, 255, 0.8);
}

.cycle-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
}

.cycle-item-clickable .cycle-value {
  color: white;
}

/* 今日记录卡片 */
.today-records {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeInUp 0.6s ease-out 0.2s both;
}

/* 今日记录 - 现代卡片容器（更轻） */
.today-records.modern {
  padding: 8rpx 0 0;
  background: transparent;
  box-shadow: none;
  border: none;
}

.records-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 24rpx;
  text-align: center;
}

.record-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  margin-bottom: 12rpx;
}

.record-item:last-child {
  margin-bottom: 0;
}

.record-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.9);
}

/* 类别强调色条 */
.record-item.temperature { border-left: 6rpx solid #4a90e2; }
.record-item.menstrual { border-left: 6rpx solid #ff6b9d; }
.record-item.intercourse { border-left: 6rpx solid #9b59b6; }

/* 圆形图标徽章（替代 .record-icon） */
.icon-badge {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  font-size: 36rpx;
}

.record-icon {
  font-size: 36rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.row-grid {
  display: grid;
  grid-template-columns: 56rpx 120rpx 1fr auto;
  align-items: center;
  width: 100%;
  column-gap: 16rpx;
}

.record-content {
  flex: 1;
  display: grid;
  grid-template-columns: 120rpx 1fr;
  align-items: center;
  column-gap: 16rpx;
  min-width: 0;
}

.record-label {
  font-size: 24rpx;
  color: #6c757d;
  font-weight: 500;
  white-space: nowrap;
}

.record-value {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1;
  position: relative;
  top: -16rpx;
}

/* 操作为文本样式：未记录红色+号，已记录灰色“修改” */
.record-action { padding: 0 8rpx; margin-left: auto; }
.action-link { background: transparent; }
.action-link.record .action-text { color: #ff4d6d; font-weight: 600; }
.action-link.modify .action-text { color: #97a6ae; }
.action-link:active .action-text { opacity: 0.75; }

/* 快速统计 */
.quick-stats {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeInUp 0.6s ease-out 0.3s both;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 24rpx;
  text-align: center;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #e74c3c;
  margin-bottom: 8rpx;
  display: block;
}

.stat-label {
  font-size: 22rpx;
  color: #6c757d;
}

/* 快速导航 */
.quick-nav {
  display: flex;
  justify-content: space-around;
  gap: 20rpx;
  margin-bottom: 40rpx;
  animation: fadeInUp 0.6s ease-out 0.4s both;
}

.nav-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 32rpx 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.nav-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.nav-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto 16rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.chart-icon {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.chart-icon::after {
  content: '📊';
}

.calendar-icon {
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
}

.calendar-icon::after {
  content: '📅';
}

.nav-text {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* 浮动按钮 */
.fab-container {
  position: fixed;
  bottom: 140rpx;
  right: 40rpx;
  z-index: 1000;
}

.fab-main {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
}

.fab-main:active {
  transform: scale(0.95);
}

.fab-active {
  transform: rotate(45deg);
}

.fab-icon {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.fab-menu {
  position: absolute;
  bottom: 140rpx;
  right: 0;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
  pointer-events: none;
}

.fab-menu-show {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.fab-item {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.fab-item:active {
  transform: scale(0.95);
}

.fab-temperature {
  background: linear-gradient(135deg, #4a90e2, #2171b5);
}

.fab-intercourse {
  background: linear-gradient(135deg, #8e44ad, #9b59b6);
}

.fab-intercourse {
  background: linear-gradient(135deg, #9b59b6, #8e44ad);
}

.fab-item-icon {
  font-size: 28rpx;
  color: white;
}

.fab-item-text {
  font-size: 20rpx;
  color: white;
  margin-top: 4rpx;
}

/* 模态框通用样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  padding: 40rpx;
}

.modal {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 32rpx;
}

.phase-options {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.phase-option {
  padding: 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.phase-option.active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
}

.phase-icon {
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
}

.phase-name {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 500;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
}

.btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  text-align: center;
  transition: all 0.3s ease;
  border: none;
}

/* 周期开始日期设置模态框样式 */
.cycle-start-modal {
  animation: fadeInUp 0.3s ease-out;
}

.cycle-start-info {
  margin-bottom: 30rpx;
  text-align: center;
}

.cycle-start-desc {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
  display: block;
  margin-bottom: 10rpx;
}

.cycle-start-tip {
  font-size: 24rpx;
  color: #6c757d;
  display: block;
}

.date-picker-container {
  margin-bottom: 30rpx;
}

.date-picker {
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date-picker-value {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.date-picker-arrow {
  font-size: 24rpx;
  color: #6c757d;
}

.flow-selector {
  margin-bottom: 20rpx;
}

.flow-selector-title {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
  display: block;
  margin-bottom: 16rpx;
}

.flow-options {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.flow-option {
  flex: 1;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.flow-option.active {
  background: rgba(255, 107, 157, 0.1);
  border: 2rpx solid #ff6b9d;
}

.flow-icon {
  display: none;
}

.flow-label {
  font-size: 24rpx;
  color: #2c3e50;
}

/* 卫生巾小图标（首页通用） */
.pad-visual {
  width: 28rpx;
  height: 16rpx;
  background: #fff;
  border: 2rpx solid #ff6b9d;
  border-radius: 8rpx 8rpx 12rpx 12rpx;
  position: relative;
  overflow: hidden;
}

.pad-visual.small {
  width: 22rpx;
  height: 14rpx;
}

.pad-visual::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 6rpx;
  background: #ff6b9d;
  border-radius: 0 0 10rpx 10rpx;
}

.btn-outline {
  background: #f8f9fa;
  color: #6c757d;
}

.btn-outline:active {
  background: #e9ecef;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.btn-primary:active {
  transform: scale(0.98);
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .cycle-info {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 12rpx;
  }
  
  .stat-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: left;
  }
  
  .quick-nav {
    flex-direction: column;
  }
  
  .phase-options {
    grid-template-columns: 1fr;
  }
}

/* 毛玻璃效果增强 */
.date-header,
.cycle-card,
.today-records,
.quick-stats,
.nav-item {
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

/* 悬浮效果 */
.date-header:hover,
.cycle-card:hover,
.today-records:hover,
.quick-stats:hover,
.nav-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

