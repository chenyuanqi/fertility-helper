.fab-container {
  position: fixed;
  bottom: 120rpx;
  right: 24rpx;
  z-index: 1000;
}

.fab-main {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b9d, #e55a89);
