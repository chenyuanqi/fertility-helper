/* 预测信息样式 */
.predictions {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx dashed rgba(0, 0, 0, 0.1);
}

.prediction-cards {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.prediction-card {
  flex: 1;
  background: linear-gradient(135deg, rgba(255, 107, 157, 0.1), rgba(255, 138, 128, 0.1));
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  margin-bottom: 16rpx;
}

.prediction-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.prediction-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.prediction-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.prediction-label {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 8rpx;
}

.prediction-date {
  font-size: 32rpx;
  font-weight: bold;
