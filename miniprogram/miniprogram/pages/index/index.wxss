/* 首页样式 */

/* 今日数据概览 */
.today-overview {
  margin-bottom: 32rpx;
}

.today-stats {
  display: flex;
  justify-content: space-around;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.stat-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.stat-info {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff6b9d;
}

.stat-unit {
  font-size: 28rpx;
  color: #8c8c8c;
}

/* 周期信息 */
.cycle-info {
  margin-bottom: 32rpx;
}

.cycle-stats {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.cycle-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1px solid #d9d9d9;
}

.cycle-item:last-child {
  border-bottom: none;
}

.cycle-label {
  color: #8c8c8c;
  font-size: 28rpx;
}

.cycle-value {
  font-weight: 600;
  color: #262626;
  font-size: 28rpx;
}

.cycle-value.active {
  color: #52c41a;
}

/* 快速操作 */
.quick-actions {
  margin-bottom: 32rpx;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 最近记录 */
.records-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1px solid #d9d9d9;
}

.record-item:last-child {
  border-bottom: none;
}

.record-date {
  font-size: 28rpx;
  color: #8c8c8c;
  font-weight: 500;
  min-width: 80rpx;
}

.record-data {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.record-temp {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff6b9d;
  min-width: 100rpx;
  text-align: right;
}

.record-indicators {
  display: flex;
  gap: 6rpx;
}

.indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.indicator.temp {
  background-color: #ff6b9d;
}

.indicator.flow {
  background: linear-gradient(135deg, #ff6b9d, #ff80bf);
}

.indicator.intercourse {
  background-color: #4ecdc4;
}

