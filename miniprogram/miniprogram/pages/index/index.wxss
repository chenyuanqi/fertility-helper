/* pages/index/index.wxss */
.container {
  padding: 32rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #ff6b9d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #666;
}

/* 日期头部 */
.date-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.current-date {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.day-of-week {
  font-size: 24rpx;
  color: #999;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.card-header {
  padding: 32rpx 32rpx 0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.card-body {
  padding: 24rpx 32rpx 32rpx;
}

/* 周期信息卡片 */
.cycle-info {
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
}

.cycle-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cycle-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.cycle-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b9d;
}

.phase-menstrual { color: #f5222d; }
.phase-follicular { color: #52c41a; }
.phase-ovulation { color: #faad14; }
.phase-luteal { color: #722ed1; }

.predictions {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
}

.prediction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.prediction-item:last-child {
  margin-bottom: 0;
}

.prediction-label {
  font-size: 28rpx;
  color: #666;
}

.prediction-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 今日记录卡片 */
.today-records {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.record-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.temperature-icon {
  background-color: #ff6b9d;
}

.menstrual-icon {
  background-color: #f5222d;
}

.intercourse-icon {
  background-color: #722ed1;
}

.record-content {
  flex: 1;
}

.record-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.record-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.record-action {
  padding: 12rpx 24rpx;
  background-color: #ff6b9d;
  border-radius: 24rpx;
}

.action-text {
  font-size: 24rpx;
  color: #fff;
}

/* 快速统计卡片 */
.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b9d;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 快速导航 */
.quick-nav {
  display: flex;
  gap: 24rpx;
  margin-top: 16rpx;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.nav-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
}

.chart-icon {
  background-color: #52c41a;
}

.calendar-icon {
  background-color: #1890ff;
}

.nav-label {
  font-size: 28rpx;
  color: #333;
}