/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* Âä†ËΩΩÁä∂ÊÄÅ */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: white;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Êó•ÊúüÂ§¥ÈÉ® */
.date-header {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeInUp 0.6s ease-out;
}

.current-date {
  text-align: center;
  margin-bottom: 16rpx;
}

.date-display {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
  display: block;
}

.day-of-week {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* Âë®Êúü‰ø°ÊÅØÂç°Áâá */
.cycle-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeInUp 0.6s ease-out 0.1s both;
}

.cycle-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.cycle-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.cycle-day {
  font-size: 36rpx;
  font-weight: bold;
  color: #e74c3c;
}

/* Âë®ÊúüÂ§©Êï∞ÂçïÁã¨ÊòæÁ§∫ */
.cycle-day-info {
  text-align: center;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.3);
}

.cycle-day-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.cycle-info {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24rpx;
}

.cycle-item {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.cycle-item-clickable {
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
  color: white;
  cursor: pointer;
}

.cycle-item-clickable:active {
  transform: scale(0.98);
}

.cycle-label {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 8rpx;
  display: block;
}

.cycle-item-clickable .cycle-label {
  color: rgba(255, 255, 255, 0.8);
}

.cycle-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
}

.cycle-item-clickable .cycle-value {
  color: white;
}

/* ‰ªäÊó•ËÆ∞ÂΩïÂç°Áâá */
.today-records {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeInUp 0.6s ease-out 0.2s both;
}

.records-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 24rpx;
  text-align: center;
}

.record-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  margin-bottom: 12rpx;
}

.record-item:last-child {
  margin-bottom: 0;
}

.record-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.9);
}

.record-icon {
  font-size: 36rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.record-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.record-label {
  font-size: 24rpx;
  color: #6c757d;
  font-weight: 500;
}

.record-value {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
}

.record-action {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.record-action:active {
  transform: scale(0.95);
}

/* Âø´ÈÄüÁªüËÆ° */
.quick-stats {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeInUp 0.6s ease-out 0.3s both;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 24rpx;
  text-align: center;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #e74c3c;
  margin-bottom: 8rpx;
  display: block;
}

.stat-label {
  font-size: 22rpx;
  color: #6c757d;
}

/* Âø´ÈÄüÂØºËà™ */
.quick-nav {
  display: flex;
  justify-content: space-around;
  gap: 20rpx;
  margin-bottom: 40rpx;
  animation: fadeInUp 0.6s ease-out 0.4s both;
}

.nav-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 32rpx 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.nav-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.nav-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto 16rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.chart-icon {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.chart-icon::after {
  content: 'üìä';
}

.calendar-icon {
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
}

.calendar-icon::after {
  content: 'üìÖ';
}

.nav-text {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* ÊµÆÂä®ÊåâÈíÆ */
.fab-container {
  position: fixed;
  bottom: 140rpx;
  right: 40rpx;
  z-index: 1000;
}

.fab-main {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
}

.fab-main:active {
  transform: scale(0.95);
}

.fab-active {
  transform: rotate(45deg);
}

.fab-icon {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.fab-menu {
  position: absolute;
  bottom: 140rpx;
  right: 0;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
  pointer-events: none;
}

.fab-menu-show {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.fab-item {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.fab-item:active {
  transform: scale(0.95);
}

.fab-temperature {
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
}

.fab-menstrual {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
}

.fab-intercourse {
  background: linear-gradient(135deg, #9b59b6, #8e44ad);
}

.fab-item-icon {
  font-size: 28rpx;
  color: white;
}

.fab-item-text {
  font-size: 20rpx;
  color: white;
  margin-top: 4rpx;
}

/* Âë®ÊúüËÆæÁΩÆÊ®°ÊÄÅÊ°Ü */
.cycle-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  padding: 40rpx;
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 32rpx;
}

.phase-options {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.phase-option {
  padding: 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.phase-option.active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
}

.phase-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.phase-name {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 500;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
}

.btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  text-align: center;
  transition: all 0.3s ease;
  border: none;
}

.btn-outline {
  background: #f8f9fa;
  color: #6c757d;
}

.btn-outline:active {
  background: #e9ecef;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.btn-primary:active {
  transform: scale(0.98);
}

/* Âä®ÁîªÊïàÊûú */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ÂìçÂ∫îÂºèËÆæËÆ° */
@media (max-width: 750rpx) {
  .cycle-info {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 12rpx;
  }
  
  .stat-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: left;
  }
  
  .quick-nav {
    flex-direction: column;
  }
  
  .phase-options {
    grid-template-columns: 1fr;
  }
}

/* ÊØõÁéªÁíÉÊïàÊûúÂ¢ûÂº∫ */
.date-header,
.cycle-card,
.today-records,
.quick-stats,
.nav-item {
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

/* ÊÇ¨ÊµÆÊïàÊûú */
.date-header:hover,
.cycle-card:hover,
.today-records:hover,
.quick-stats:hover,
.nav-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

/* È¢ÑÊµã‰ø°ÊÅØÊ†∑Âºè */
.predictions {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx dashed rgba(0, 0, 0, 0.1);
}

.prediction-cards {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.prediction-card {
  flex: 1;
  background: linear-gradient(135deg, rgba(255, 107, 157, 0.1), rgba(255, 138, 128, 0.1));
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  margin-bottom: 16rpx;
}

.prediction-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.prediction-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.prediction-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.prediction-label {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 8rpx;
}

.prediction-date {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6b9d;
}
